<header class="navbar-fixed-top mainHeader">
  <div class="container">
    <a href="#" class="logo">idea portal</a>
    <% if current_user %>
    <div class="navigation-links">
        <%= link_to "Post Your Idea", new_idea_path, :class=>"glyphicon glyphicon-eye-open" %>
        <%= link_to "View Ideas", show_ideas_ideas_path %>
        <%= link_to "My Ideas", show_ideas_ideas_path(:rel=>"my_ideas") %>
    </div>
    <div class="optionWrap clearfix">
      <% if current_user %>
        <% if current_user.is_admin? %>
          <%= link_to "Admin", admin_ideas_path, :class => "brand sign_links homeBtn" %> 
        <% end %>
          <%= link_to "Home", ideas_path, :class => "brand sign_links homeBtn" %>
           <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "brand sign_links signOutBtn", :style=> "float:right;" %>
      <% else %>
          <%= link_to "Sign in", new_user_session_path, :class => "brand sign_links", :style=> "float:right;" %>
      <% end %>
    </div>
  </div>
</header>